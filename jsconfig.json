{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"checkJs": false,
		"paths": {
			"@content/*": ["./content/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@lib/*": ["./src/lib/*"],
			"@context/*": ["./src/context/*"],
			"@styles/*": ["./src/styles/*"],
			"@i18n/*": ["./src/i18n/*"],
			"react": ["./node_modules/react"]
		}
	},
	"include": ["**/*.jsx", "**/*.js"],
	"exclude": ["node_modules"]
}
